@model IEnumerable<PeliculasIdentity.Data.Entities.Pelicula>

@{
    ViewData["Title"] = "Index";
}

<h5>Peliculas</h5>

<p>
    <a asp-action="Create" class="btn btn-primary">Crear Pelicula</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Titulo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Director)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Genero)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Titulo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Director)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genero)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FechaPublicacion)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-warning"  asp-route-id="@item.Id">Editar</a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Detalles</a> 
                <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Borrar</a>
            </td>
        </tr>
}
    </tbody>
</table>
